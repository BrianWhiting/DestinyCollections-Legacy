$baseColour = rgba(11, 13, 16, 1.0)
$bgColour = lighten($baseColour, 4%)
$filterColour = lighten($baseColour, 10%)
$edgePadding = 15px

.header
  background: $bgColour
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 $edgePadding
  z-index: 1
  position: relative

.main
  display: flex
  height: 100%

.version
  font-size: .65em
  opacity: .8
  vertical-align: top

.navItem
  padding: 17px 15px 13px 15px
  height: 100%
  line-height: 22px
  transition: all 150ms ease-in-out
  color: inherit
  text-decoration: none

  &:hover
    background: lighten($baseColour, 7%)

  &.active
    position: relative

    &:after
      display: block
      content: ''
      position absolute
      bottom: 0
      right: 0
      left: 0
      height: 3px
      background: lighten($baseColour, 30%)

.navItemSwitchGame
  composes: navItem
  color: #dadada

.siteName
  padding: $edgePadding
  padding-left: 0
  composes: navItem
  font-weight: 400
  font-size: 22px
  margin: 0

  &:hover
    background: none

.social
  margin-right: -7px

.socialItem
  font-size: 20px
  padding: 0 7px
  opacity: .7
  transition: all 150ms ease-in-out
  color: white !important

  &:hover
    opacity: 1

  @media screen and (max-width: 680px)
    display: none

.shortName
  display: inline

  @media screen and (min-width: 680px)
    display: none

.longName
  display: none

  @media screen and (min-width: 680px)
    display: inline

.filter
  padding: 0 10px
  background: $filterColour
  transition: all 150ms ease-in-out
  height: 0
  overflow: hidden

.filterOpen
  height: 44px

.filterButton
  background: $bgColour
  text-color: inherit
  border: none
  font-size: inherit
  color: #dadada
  cursor: pointer
  font-size: .9em
  outline: none !important
  margin-right: 15px

  &.active
    background: lighten($baseColour, 10%)

    &:after
      display: none !important

.filterItem
  padding: 10px
  display: inline-block
  transition: all 150ms ease-in-out

  &:hover
    background: lighten($filterColour, 7%)
