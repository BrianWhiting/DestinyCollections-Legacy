.filterRoot
  display: inline-block
  width: 100%
  margin-bottom: 15px

  &:last-of-type
    margin-bottom: 0

.root
  display: flex
  color: rgba(231, 232, 232, 1.0)
  transition: all 150ms ease-in-out

  &.obtained
    opacity: .35

.accessory
  flex: 0 1 auto
  position: relative
  color: white

  .obtained &:after
    font-family: 'sans-serif'
    content: 'âœ“'
    display: block
    position: absolute
    top: -4.5px
    right: -4.5px
    background: #27ae60
    font-size: 10px
    width: 18px
    height: 18px
    border-radius: 18px
    display: flex
    align-items: center
    justify-content: center
    color: white
    letter-spacing: -2px

.image
  width: 50px
  height: 50px
  display: block

.main
  flex: 1 1 auto
  margin-left: 10px

.name
  font-size: 16px

.type
  font-size: 14px
  opacity: .8

.link
  text-decoration: none
  color: inherit !important

.small
  margin-right: 15px

  &.filterRoot
    width: initial

  &:last-of-type
    padding-right: 0

  .main
    display: none

.tiny
  margin-right: 10px
  margin-bottom: 10px

  .image
    width: 40px
    height: 40px


  .obtained .accessory:after
    width: 15px
    height: 15px
    font-size: 9px
    letter-spacing: -1px
