$padding = 10px;

.inner
  background: #15191E

.header
  background:#283039
  padding: $padding

.seasonLabel
  font-size: .75em
  background: #2B3037
  border-radius: 2px
  padding: 0px 6px
  font-weight: 400
  margin-left: .5em

.itemListWrapper
  margin: 0 -5px -10px -10px

.itemList
  display: inline-flex
  flex-wrap: wrap
  margin: 0 5px 5px 5px

.item
  margin: 0 5px
  margin-bottom: 10px

.title
.desc
  margin: 0

.title
  margin-bottom: .25em
  color: #f7f8f8
  font-weight: 500

.desc
  color: #b7bcbe

.section
  padding: 0 $padding

.sectionName
  margin-top: 10px
  margin-bottom: 2px
