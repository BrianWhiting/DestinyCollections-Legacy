$padding = 10px

.tooltip
  width: 320px
  font-size: 15px
  background: #20262d
  position: relative
  color: white

  &.small
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.5)

.body
  padding: 0 $padding
  overflow: auto

  .small &
    font-size: 14px

.header
  font-size: 15px

  .small &
    margin-bottom: 10px
    padding: 0 10px 0 0

.attributes
  display: flex
  padding: 15px 0

.power
  font-size: 30px
  line-height: 1
  display: flex
  align-items: center
  color: #C690DC
  font-weight: 600

.voidDamage
  width: .95em
  height: .95em
  background: #C690DC
  margin-right: .25ch
  mask: url("https://bungie.net/img/destiny_content/damage_types/destiny2/void_large.png") center center / cover;

.ammoType
  display: flex
  align-items: center
  border-left: 1px solid #706A73
  padding-left: 10px
  margin-left: 10px
  text-transform: uppercase

.description
  margin: $padding 0

  .small &
    display: none
    margin-top: 0

  .body:hover &
    display: block

.screenshotWrapper
  position: relative
  width: 100%
  padding-bottom: ((9/16) * 100%)
  margin-bottom: $padding

.screenshot
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  display: block
  object-fit: cover
  object-position: center

.extraInfo
  opacity: .8
  font-size: .9em
  font-style: italic
  margin-bottom: $padding

  &:only-child
    margin-top: $padding

.objectives
  margin-top: $padding
  margin-bottom: $padding
  font-size: 14px

  .small &
    margin-top: 0
    font-size: 13px
