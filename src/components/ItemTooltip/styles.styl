$padding = 10px

.tooltip
  width: 320px
  font-size: 15px
  background: #20262d
  position: relative
  color: white
  box-shadow: 0 3px 6px rgba(black, 0.16), 0 3px 6px rgba(black, 0.23);

  &.small
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.5)

.body
  padding: 0 $padding
  overflow: auto

  .small &
    font-size: 14px

.header
  font-size: 15px

  .small &
    margin-bottom: 10px
    padding: 0 10px 0 10px

.description
  margin: $padding 0
  line-height: 1.3

  .small &
    display: none
    margin-top: 0

  .body:hover &
    display: block

.itemAttributes
  padding-top: 15px

.screenshotWrapper
  position: relative
  width: 100%
  padding-bottom: ((9/16) * 100%)
  margin-bottom: $padding

.screenshot
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  display: block
  object-fit: cover
  object-position: center

.extraInfo
  opacity: .8
  font-size: .9em
  font-style: italic
  margin-bottom: $padding

  &:only-child
    margin-top: $padding

.objectives
  margin-top: $padding
  margin-bottom: $padding
  font-size: 14px

  .small &
    margin-top: 0
    font-size: 13px
