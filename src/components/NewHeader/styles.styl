$baseColour = rgba(11, 13, 16, 1.0)
$bgColour = lighten($baseColour, 4%)
$filterColour = lighten($baseColour, 10%)
$activeBg = rgba(white, .07)
$padding = 15px

.root
  height: 52px

.fixed
  z-index: 2
  background: $bgColour
  line-height: 1
  margin-bottom: $padding
  display: flex
  align-items: center
  padding: 0 $padding
  position: fixed
  top: 0
  left: 0
  right: 0
  box-shadow: 0 0 20px -5px rgba(black, 0.75)

.siteName
  font-size: 22px
  display: flex
  align-items: center

.logo
  width: 22px
  height: auto
  margin-right: 12px

.links
  flex: 1
  margin-left: $padding

.link
  display: inline-block
  padding: 18px 10px
  color: inherit
  text-decoration: none

  &:hover
    background: $activeBg

  &.active
    position: relative

    &:after
      display: block
      content: ''
      position absolute
      bottom: 0
      right: 0
      left: 0
      height: 3px
      background: rgba(white, .2)

.etc
  margin: 0 -8px
  display: flex
  align-items: center

.socialLink
  display: inline-block
  margin: 0 8px
  opacity: .7
  transition: all 150ms ease-in-out
  color: white !important
  font-size: 22px

  &:hover
    opacity: 1
