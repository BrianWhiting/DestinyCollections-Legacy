.list
  margin: 0 -15px
  padding: 0

.item
  position: relative
  display: inline-block
  margin: 0 15px
  padding: 5px 0
  font-size: 18px
  opacity: .5
  transition: 100ms ease-in-out opacity
  list-style: none
  cursor: pointer

  &:not(.itemActive):hover
    opacity: .75

  a, &
    color: inherit
    text-decoration: none

  &:after
    transition: 100ms ease-in-out height
    display: block
    content: ''
    position absolute
    bottom: 0
    right: 0
    left: 0
    height: 0
    background: rgba(white, .2)

.itemActive
  opacity: 1

  &:after
    height: 3px


