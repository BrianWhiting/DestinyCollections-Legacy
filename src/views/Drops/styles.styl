.root
  color: white

.hero.large
  min-height: 90vh
  display: flex
  flex-direction: column

.centerP
  text-align: center
  font-size: 18px
  margin-top: 30px

.currentActivity
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  flex: 1 0 auto

  @media screen and (max-width: 600px)
    padding: 0 10px

.caTop
  width: 100%
  max-width: 600px
  margin-bottom: 5px
  display: flex
  justify-content: space-between

  .heading
    margin: 0
    font-size: 20px
    opacity: .5

.refreshBtn
  color: black !important
  background: rgba(208, 170, 11, 1.0)
  padding: 8px 15px
  text-decoration: none
  transition: 150ms ease-in-out
  display: inline-block
  border: none
  font-size: 14px
  cursor: pointer
  outline: none !important
  opacity: 0

  &:hover
    background: #ffce1f
    opacity: 1

  &:active
    opacity: .8

  &:disabled
    opacity: .5 !important
    pointer-events: none

.heading
  font-weight: 400
  font-size: 22px
  margin-bottom: .1em

.panel
  background: #2c3e50
  text-align: center
  width: 100%
  max-width: 500px
  margin: auto
  margin-top: 25px
  padding: 25px

.panel
  @media screen and (max-width: 500px)
    width: auto
    margin-left: 10px
    margin-right: 10px

.debug
  text-align: center

.debugLink
  opacity: 0.8
  color: inherit
  text-decoration: none
  transition: all 150ms ease-in-out

  &:hover
    opacity: 1

.debugBox
  display: none
  width: 100%
  max-width: 500px
  padding: 0 15px
  margin: auto
  text-align: center

.debugBoxActive
  display: block
  margin-bottom: 15px

.debugField
  width: 100%
  height: 600px
  font-family: monospace

.debugCopyButton
  width: 100%
  padding: 15px
  font-size: 16px
  background: #2ecc71
  border: none
  color: white
  transition: all 50ms ease-in-out
  outline: none !important
  cursor: pointer
