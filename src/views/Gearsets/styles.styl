$duration = 500ms
$durationDelay = $duration / 10
$twitter = #47A0EA

mobile()
  @media screen and (max-width: 679px)
    {block}

.trackedItems
  position: fixed
  right: 16px
  bottom: 0
  color: white
  z-index: 999

  +mobile()
    left: 16px
    display: flex
    flex-direction: column
    align-items: center

.info
  max-width: 800px
  text-align: center
  margin: 30px auto
  background: #15191E
  padding: 15px 15px
  border-radius: 2px

  p
    margin: 0

  a
    color: $twitter

.voteOnTwitter
  display: inline-block
  background: $twitter
  color: white
  border-radius: 2px
  padding: 12px 20px 12px 20px
  line-height: 1
  text-decoration: none
  margin: 10px 0
  color: white
  display: none

.beta
  text-align: center
  max-width: 500px
  opacity: .8
  margin: 20px auto 15px auto

.subnav
  margin: 15px 15px
  display: flex
  justify-content: space-between
  align-items: flex-start
  flex-wrap: wrap

  // mobile styling
  @media screen and (max-width: 679px)
    display: block

.navsections
  margin: 0 -15px

  // mobile styling
  @media screen and (max-width: 679px)
    -webkit-overflow-scrolling: touch
    overflow: scroll
    white-space: nowrap

.subnavItem
  display: inline-block
  font-size: 20px
  font-weight: bold
  margin: 0 15px
  color: darken(#FFFFFF, 50%)
  animation-fill-mode: both
  text-decoration: none
  transition: 150ms ease-in-out

  for i in 0..10
    &:nth-child({i})
      animation-delay: $durationDelay * (i + 5)

  &:hover
    color: darken(#FFFFFF, 10%)

  &.active
    color: #FFFFFF

@keyframes appear
  from
    opacity: 0
    transform: translate3d(0, -100%, 0)

  to
    opacity: 1
    transform: translate3d(0, 0, 0)


.debug
  text-align: center
  margin-bottom:15px

  button
    background: #13161B
    cursor: pointer
    border: none
    color: rgba(white, .8)
    font-size: 14px
    padding: 5px 10px
    border-radius: 2px
    transition: all 150ms ease-in-out

    &:hover
      background: lighten(#13161B, 20%)


.crimsonBanner
  padding: 20px
  max-width: 900px
  width: 100%
  text-align: center
  color: rgba(white, .85)
  font-size: 18px
  background: linear-gradient(to bottom right, #80201B, #6F1919)
  background-image: url('../../crimsonDaysHeaderCropped.jpeg')
  background-position: center;
  background-size: cover;
  margin: auto
  position: relative
  border-radius: 3px
  overflow: hidden
  display: block
  text-decoration: none

.crimsonBanner p
  opacity: 0
  margin: 0
  padding: 15px 0

.inner
  position: absolute
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 100%;
  opacity: 1 !important
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0
  background: rgba(111, 25, 25, 0.5)
  text-shadow: 0 0 100px black

.inner div
  padding: 20px 0

.crimsonBanner a
  color: white
