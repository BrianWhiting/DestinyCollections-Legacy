.root
  padding: 15px


mobile()
  @media screen and (max-width: 679px)
    {block}

.promo
  margin: auto
  font-size: 17px
  text-align: center
  max-width: 775px
  background: #15191E
  padding: 10px
  margin-bottom: 60px

  a
    color: white

.maintenance
  composes: promo
  padding: 6px
  border: 2px solid #e74c3c

.button
  color: black !important
  background: rgba(208, 170, 11, 1.0)
  padding: 10px 20px
  text-decoration: none
  transition: 150ms ease-in-out
  display: inline-block

  &:hover
    background: #ffce1f


.trackedItems
  position: fixed
  right: 0
  bottom: 0
  padding-right: 16px
  padding-left: 16px
  max-height: calc(100vh - 52px)
  overflow: auto
  color: white
  z-index: 999

  +mobile()
    left: 0
    display: flex
    flex-direction: column
    align-items: center

.trackedItem
  padding-bottom: 10px

.info
  background: #B8B9BA
  padding: 8px 15px
  border-radius: 2px
  color: #090B0F
  margin-bottom: 50px

.errorInfo
  composes: info
  background: #e74c3c
  color: white

  a
    color: white !important

.hiddenSets
  text-align: center

.unhideSetsButton
  background: none
  border: none
  text-decoration: underline
  color: inherit
  padding: 0
  font-size: inherit
  cursor: pointer
  outline: none !important
  transition: opacity 150ms ease-in-out

  &:active
    opacity: .6


.solsticePromo
  &, *
    font-family: 'nhg text'

  margin-bottom: 50px + 25px
  text-shadow: 0 1px 1px 5px rgba(black, .75)
  margin-left: -15px
  margin-right: -15px
  position: relative

  .solsticeBg
    position: absolute
    top: 0
    left: 0
    bottom: 0
    width: 75%;
    background: url("./solstice.jpg")
    background-size: cover
    background-position: left 20%
    z-index: 1

    @media screen and (max-width: 900px)
      width: 100%

  .solsticePromoContent
    background: linear-gradient(to right, rgba(#090B0E, 0), rgba(#090B0E, 1) 40% )
    // background: linear-gradient(to right, rgba(blue, 0), rgba(blue, .5) 50% )
    padding: 50px 15px
    margin-left: 50%
    z-index: 2
    position relative

    @media screen and (max-width: 900px)
      margin: 0
      background: rgba(#090B0E, .75)
      text-align: center

    h1
      font-size: 40px
      margin-top: 0

    p
      font-size: 18px
      line-height: 1.5
      max-width: 800px
      margin-bottom: 20px

.solsticeCta
  font-family: 'Titillium Web', sans-serif
  text-shadow: none
  margin: auto
  display: inline-block

  color: black !important
  background: rgba(208, 170, 11, 1.0)
  padding: 10px 20px
  text-decoration: none
  transition: 150ms ease-in-out
  display: inline-block
  text-align: center

  &:hover
    background: #ffce1f
