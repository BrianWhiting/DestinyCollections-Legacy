.root
  padding: 15px


mobile()
  @media screen and (max-width: 679px)
    {block}

.trackedItems
  position: fixed
  right: 16px
  bottom: 0
  color: white
  z-index: 999

  +mobile()
    left: 16px
    display: flex
    flex-direction: column
    align-items: center


.info
  background: #B8B9BA
  padding: 8px 15px
  border-radius: 2px
  color: #090B0F
  margin-bottom: 50px


.link
  color: black !important

.secretLink
  composes: link
  text-decoration: none
  animation: pulse 2s infinite alternate both;

@keyframes pulse {
  from { opacity: .7 }
  to { opacity: 1 }
}
