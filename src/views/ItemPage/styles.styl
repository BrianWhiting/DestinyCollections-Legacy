$border-color =  lighten(#12161B, 10%);

.root
  padding: 15px
  max-width: 1200px
  margin: auto

.pageFlex
  display: flex
  justify-content: center
  flex-wrap: wrap
  margin: 0 -15px

.itemMain
.itemExtra
  flex: 1
  width: 50%
  min-width: 300px
  margin: 0 15px 30px 15px

.nameIconLockup
  display: flex
  align-items: flex-end
  margin: 0 15px 15px 15px
  width: 100%
  border-bottom: 1px solid $border-color
  padding-bottom: 10px

.itemIcon
  height: 60px
  width: 60px
  display: block
  margin-right: 15px

.itemName
  margin: 0
  font-size: 28px

.screenshot
  width: 100%
  display: block

.stats
  font-size: 17.8px

.itemSource
.description
  margin: 0 0 20px 0
  font-style: italic

.itemSource
  opacity: .7
  font-style: normal

.skeleton
  background: $border-color
  color: $border-color
  height: 1.2em
  width: 100%
  min-width: 150px
  margin-bottom: .2em

.skeletonImage
  background: $border-color
  height: 60px
  width: 60px

.itemAttributes
  margin-bottom: 20px
