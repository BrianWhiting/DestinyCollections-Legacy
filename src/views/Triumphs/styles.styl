.nodes
  content: 'lol'

.children
  display: grid
  grid-template-columns: 1fr 1fr 1fr
  grid-column-gap: 10px
  grid-row-gap: 10px

.node
  grid-column: span 3

.record
  min-width: 400px

.node
.record
  color: inherit
  text-decoration: none

.panes
  display: flex
  overflow: auto

.pane
  min-width: 350px
  padding: 0 10px

  & + &
    border-left: 2px solid rgba(white, .5)

.scoreBox
  margin: 10px auto
  text-align: center
  text-transform: uppercase
  margin-bottom: 30px

.scoreTitle
  font-size: 15px
  opacity: .5

.scoreScore
  font-size: 45px
  font-weight: bold
  line-height: 1
