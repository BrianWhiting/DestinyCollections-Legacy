$baseBg = darken(#1a1f28, 18%);
// $baseBg = #15191E;
$step = 25%;

.nodes
  content: 'lol'

.panes
  background: $baseBg

.pane
  padding: 20px 20px

  & + &
    border-top: 1px solid rgba(white, .15)

  &:nth-last-child(2)
    background: darken($baseBg, $step * 1)

  &:nth-last-child(3)
    background: darken($baseBg, $step * 2)

  &:nth-last-child(4)
    background: darken($baseBg, $step * 3)

  &:last-child
    min-height: 90vh

.scoreBox
  margin: 10px auto
  text-align: center
  text-transform: uppercase
  margin-bottom: 30px

.scoreTitle
  font-size: 15px
  opacity: .5

.scoreScore
  font-size: 45px
  font-weight: bold
  line-height: 1
